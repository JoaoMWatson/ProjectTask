<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verdefundo"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8sp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:background="#fff"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="50sp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:layout_weight="1"
                    android:src="@drawable/iconeLosangolo"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Peronal \nNotes"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:layout_weight="1"
                    android:src="@drawable/iconeHexagono"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Office\nNotes"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:layout_weight="1"
                    android:src="@drawable/iconeCirclo"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Public\nNotes"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textAlignment="center"/>

            </LinearLayout>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:background="#fff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bloco1"
                    android:layout_weight="1.3"
                    android:layout_margin="5sp"
                    android:orientation="vertical">

                    <!-- Começo bloco 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="20sp"
                        android:layout_marginLeft="12sp"
                        android:layout_marginRight="12sp"
                        android:layout_marginBottom="20sp">

                        <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Note 1"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textAlignment="gravity" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lorem Ipsum is simply dummy text of the printing a
                            nd typesetting industry."
                            android:textAlignment="gravity"
                            android:textSize="12sp"/>

                        <!-- Final texto note 1 -->
                    </LinearLayout>

                    <!--  Final note 1 -->
                </LinearLayout>

                  <!--  Começo bloco 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bloco2"
                    android:layout_weight="1"
                    android:layout_margin="5sp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="20sp"
                        android:layout_marginLeft="12sp"
                        android:layout_marginRight="12sp"
                        android:layout_marginBottom="20sp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Note 1"
                        android:textSize="20sp"
                        android:textColor="#000"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lorem Ipsum is simply dummy text of the printing a
                            nd typesetting industry. Lorem Ipsum has been the industry's
                            standard dummy text ever since the 1500s, when an unknown printer
                            took a galley of type and scrambled it to make a type specimen book."
                        android:textSize="12sp"
                        />

                </LinearLayout>

                </LinearLayout>


                <!--  Final blocos esquerda -->
            </LinearLayout>

            <!-- Começo blocos da direita -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1.3"
                >
                <!-- Começo do bloco 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bloco3"
                    android:layout_weight="2"
                    android:layout_margin="5sp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="20sp"
                        android:layout_marginLeft="12sp"
                        android:layout_marginRight="12sp"
                        android:layout_marginBottom="20sp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="attach a\nphoto"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textColor="#fff"/>

                    </LinearLayout>
                <!--  Final do bloco 3 -->
                </LinearLayout>

                    <!-- Começo bloco 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bloco4"
                    android:layout_weight="1"
                    android:layout_margin="5sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="20sp"
                        android:layout_marginLeft="12sp"
                        android:layout_marginRight="12sp"
                        android:layout_marginBottom="20sp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="attach a\nphoto"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textColor="#fff"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="#fff"
                            android:layout_marginTop="50sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Note 2"
                            android:textColor="#000"
                            android:textSize="20sp"
                            android:layout_marginTop="5sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lorem ipslum dolor sit amet,"
                            android:textSize="12sp"
                            android:layout_marginTop="5sp"/>


                    </LinearLayout>

                </LinearLayout>

                <!-- Final blocos esquerda -->
            </LinearLayout>

            <!-- Final linear horizontal -->
        </LinearLayout>

    </LinearLayout>



</LinearLayout>