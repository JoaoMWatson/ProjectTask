<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SemBarra"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TaskInActivity"
    android:background="#fff">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/verdefundo">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:textColor="#fff"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15sp"
        android:orientation="vertical"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:src="@drawable/iconelosangoloinvertido"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal Notes"
                android:textAlignment="center"
                android:layout_marginTop="35sp"
                android:textSize="18sp"
                android:textColor="@color/verdefundo"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/verdefundo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="87sp"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:background="@color/bloco1">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Note 1"
                android:textSize="23sp"
                android:layout_marginLeft="10sp"
                android:textColor="#000"
                android:layout_marginTop="25sp"/>
        </LinearLayout>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit,
            sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
            quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
            android:textSize="18sp"
            android:layout_marginTop="13sp"
            android:background="@drawable/quadrado"
            android:padding="5sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Start Data                             End Data"
            android:layout_marginTop="30sp"
            android:backgroundTint="@color/verdefundo"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alarm"
            android:layout_marginTop="10sp"
            android:backgroundTint="@color/verdefundo"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Attachment"
            android:layout_marginTop="10sp"
            android:backgroundTint="@color/verdefundo"
            />

    </LinearLayout>
</LinearLayout>